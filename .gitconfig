[alias]
    b  = blame -w
    bb = blame -w -C -CHANGES

    lg  = log --oneline --graph --decorate --all
    lg1 = log --graph --decorate --date=relative \
              --format='%C(auto)%h %C(bold)%ad%Creset %C(auto)%an%d %Creset%s'

[diff]
    algorithm = histogram
    colorMoved = default

[merge]
    conflictstyle = zdiff3
	
[blame]
    ignoreRevsFile = .git-blame-ignore-revs
    showEmail = true
    showRoot = true
    markIgnoredLines = true
    markUnblamableLines = true

[pull]
    rebase = true

[rebase]
    autoStash = true

[rerere]
    enabled = true

[core]
    autocrlf = input
    safecrlf = true

[color]
    ui = auto