{
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 27,
    "patch": 0
  },

  "configurePresets": [
    {
      "name": "ninja-base",
      "displayName": "Ninja (base)",
      "description": "Base configuration using Ninja generator",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build/${presetName}",
      "cacheVariables": {
        "CMAKE_EXPORT_COMPILE_COMMANDS": {
          "type": "BOOL",
          "value": true
        },
        "BUILD_TESTING": {
          "type": "BOOL",
          "value": true
        },
        "LIBMEMALLOC_ENABLE_COVERAGE": {
          "type": "BOOL",
          "value": false
        },
        "LIBMEMALLOC_ENABLE_SANITIZERS": {
          "type": "STRING",
          "value": ""
        }
      },
      "environment": {
        "MY_LIBMEMALLOC_ENV": "dev"
      },
      "vendor": {
        "example.com/ExampleIDE/1.0": {
          "autoFormat": true
        }
      }
    },

    {
      "name": "ninja-debug",
      "inherits": "ninja-base",
      "displayName": "Ninja Debug (default toolchain)",
      "description": "Debug build with tests enabled using default toolchain",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        }
      }
    },

    {
      "name": "ninja-release",
      "inherits": "ninja-base",
      "displayName": "Ninja Release (default toolchain)",
      "description": "Release build with optimizations using default toolchain",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Release"
        },
        "BUILD_TESTING": {
          "type": "BOOL",
          "value": false
        },
        "LIBMEMALLOC_ENABLE_COVERAGE": {
          "type": "BOOL",
          "value": false
        },
        "LIBMEMALLOC_ENABLE_SANITIZERS": {
          "type": "STRING",
          "value": ""
        }
      }
    },

    {
      "name": "ninja-coverage",
      "inherits": "ninja-debug",
      "displayName": "Ninja Debug + Coverage",
      "description": "Debug build with coverage instrumentation enabled (gcc/clang)",
      "cacheVariables": {
        "LIBMEMALLOC_ENABLE_COVERAGE": {
          "type": "BOOL",
          "value": true
        }
      },
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Linux"
      }
    },

    {
      "name": "ninja-asan-ubsan",
      "inherits": "ninja-debug",
      "displayName": "Ninja Debug + ASan/UBSan",
      "description": "Debug build with AddressSanitizer and UndefinedBehaviorSanitizer",
      "cacheVariables": {
        "LIBMEMALLOC_ENABLE_SANITIZERS": {
          "type": "STRING",
          "value": "address;undefined"
        }
      }
    },

    {
      "name": "ninja-gcc-debug",
      "inherits": "ninja-debug",
      "displayName": "Ninja Debug (GCC)",
      "description": "Debug build using GCC toolchain explicitly",
      "environment": {
        "CC": "gcc",
        "CXX": "g++",
        "MY_LIBMEMALLOC_ENV": "dev-gcc"
      }
    },

    {
      "name": "ninja-gcc-release",
      "inherits": "ninja-release",
      "displayName": "Ninja Release (GCC)",
      "description": "Release build using GCC toolchain explicitly",
      "environment": {
        "CC": "gcc",
        "CXX": "g++",
        "MY_LIBMEMALLOC_ENV": "dev-gcc"
      }
    },

    {
      "name": "ninja-clang-debug",
      "inherits": "ninja-debug",
      "displayName": "Ninja Debug (Clang)",
      "description": "Debug build using Clang toolchain",
      "environment": {
        "CC": "clang",
        "CXX": "clang++",
        "MY_LIBMEMALLOC_ENV": "dev-clang"
      }
    },

    {
      "name": "ninja-clang-release",
      "inherits": "ninja-release",
      "displayName": "Ninja Release (Clang)",
      "description": "Release build using Clang toolchain",
      "environment": {
        "CC": "clang",
        "CXX": "clang++",
        "MY_LIBMEMALLOC_ENV": "dev-clang"
      }
    },

    {
      "name": "ninja-msvc-debug",
      "inherits": "ninja-debug",
      "displayName": "Ninja Debug (MSVC)",
      "description": "Debug build using MSVC with Ninja on Windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "environment": {
        "CC": "cl",
        "CXX": "cl",
        "MY_LIBMEMALLOC_ENV": "dev-msvc"
      }
    },

    {
      "name": "ninja-msvc-release",
      "inherits": "ninja-release",
      "displayName": "Ninja Release (MSVC)",
      "description": "Release build using MSVC with Ninja on Windows",
      "condition": {
        "type": "equals",
        "lhs": "${hostSystemName}",
        "rhs": "Windows"
      },
      "environment": {
        "CC": "cl",
        "CXX": "cl",
        "MY_LIBMEMALLOC_ENV": "dev-msvc"
      }
    },

    {
      "name": "ninja-zig-debug",
      "inherits": "ninja-debug",
      "displayName": "Ninja Debug (Zig cc)",
      "description": "Debug build using Zig as C toolchain (zig cc)",
      "environment": {
        "CC": "zig cc",
        "CXX": "zig c++",
        "MY_LIBMEMALLOC_ENV": "dev-zig"
      }
    },

    {
      "name": "ninja-zig-release",
