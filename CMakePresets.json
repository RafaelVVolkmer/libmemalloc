      "environment": {
        "CC": "clang",
        "CXX": "clang++",
        "MY_LIBMEMALLOC_ENV": "dev-clang"
      }
    },

    {
      "name": "make-clang-release",
      "inherits": "make-release",
      "displayName": "Make Release (Clang)",
      "description": "Release build using Clang with Unix Makefiles",
      "environment": {
        "CC": "clang",
        "CXX": "clang++",
        "MY_LIBMEMALLOC_ENV": "dev-clang"
