      "displayName": "Ninja Release (Zig cc)",
      "description": "Release build using Zig as C toolchain (zig cc)",
      "environment": {
        "CC": "zig cc",
        "CXX": "zig c++",
        "MY_LIBMEMALLOC_ENV": "dev-zig"
      }
    },

    {
      "name": "ninja-multi",
      "inherits": "ninja-base",
      "displayName": "Ninja Multi-Config",
      "description": "Multi-config build using Ninja Multi-Config generator",
      "generator": "Ninja Multi-Config",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": ""
        }
      }
    },

    {
      "name": "make-base",
      "inherits": "ninja-base",
      "displayName": "Makefiles (base)",
      "description": "Base configuration using Unix Makefiles generator",
      "hidden": true,
      "generator": "Unix Makefiles",
      "binaryDir": "${sourceDir}/build/${presetName}"
    },

    {
      "name": "make-debug",
      "inherits": "make-base",
      "displayName": "Make Debug (default toolchain)",
      "description": "Debug build using Unix Makefiles with default toolchain",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": {
          "type": "STRING",
          "value": "Debug"
        }
      }
    },

    {
      "name": "make-release",
