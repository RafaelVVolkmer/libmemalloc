    {
      "name": "make-zig-debug",
      "inherits": "make-debug",
      "displayName": "Make Debug (Zig cc)",
      "description": "Debug build using Zig cc with Unix Makefiles",
      "environment": {
        "CC": "zig cc",
        "CXX": "zig c++",
        "MY_LIBMEMALLOC_ENV": "dev-zig"
      }
